{% extends 'WaBackBundle::layout.html.twig' %}

{% block title %}Liste des commentaires - Application{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listes des Commentaires</h3>
                    <div class="box-tools">
                        <div class="input-group" style="width: 150px;">
                            <input name="table_search" class="form-control input-sm pull-right" placeholder="Search" type="text">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <th>Auteur</th>
                                <th>Contenu</th>
                                <th>Note</th>
                                <th>Date Création</th>
                                <th>Actif</th>
                            </tr>
                            {% for commentaire in commentaires %}
                                <tr>
                                    <td>{{ commentaire.id }}</td>
                                    <td>{{ commentaire.auteur }}</td>
                                    <td>{{ commentaire.contenu }}</td>
                                    <td>{{ commentaire.note }}</td>
                                    <td>{{ commentaire.dateCreation|date('d-m-Y') }}</td>
                                    {% if commentaire.active == 0 %}
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('commentaire_edit', {id: commentaire.id}) }}" class="btn btn-primary">Activer</a>
                                            </div>
                                        </td>
                                    {% else %}
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('commentaire_edit', {id: commentaire.id}) }}" class="btn btn-danger delete">Désactiver</a>
                                            </div>
                                        </td>
                                    {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody></table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
{% endblock %}
