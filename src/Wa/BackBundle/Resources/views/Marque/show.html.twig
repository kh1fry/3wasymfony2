{% extends 'WaBackBundle::layout.html.twig' %}

{% block title %}
    {{ entity.titre }}
{% endblock %}

{% block h1 %}
    <h1>Marque</h1>
    {{ wo_render_breadcrumbs() }}
{% endblock %}
{% block content %}

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.titre }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('marque') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('marque_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
