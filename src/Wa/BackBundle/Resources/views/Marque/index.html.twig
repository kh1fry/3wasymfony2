{% extends 'WaBackBundle::layout.html.twig' %}

{% block content %}
    <h1>Marque list</h1>
    {# GERER LA PAGINATION #}
    <div class="count">
        {{ entities.getTotalItemCount }}
    </div>
    <table class="records_list">
        <thead>
            <tr>
                {# sorting of properties based on query components #}
                <th>{{ knp_pagination_sortable(entities, 'Id', 'marque.id') }}</th>
                <th{% if entities.isSorted('marque.Titre') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Titre', 'marque.titre') }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('marque_show', { 'id': entity.slug }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('marque_show', { 'id': entity.slug }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('marque_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>
        <ul>
        <li>
            <a href="{{ path('marque_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
